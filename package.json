{
  "name": "shubhhampers",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:production": "BUILD_ID=$(date +%s) npm_package_version=$(node -p \"require('./package.json').version\")-$(date +%s) next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx --quiet",
    "type-check": "tsc --noEmit",
    "compress-images": "node scripts/compress-images.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "verify": "npm run type-check && npm run lint && npm run format && npm run build",
    "verify:quick": "npm run type-check && npm run lint:check && npm run format",
    "verify:strict": "npm run type-check && npm run lint:strict && npm run format && npm run build",
    "prepare": "husky",
    "deploy": "npm run build:production && npm run start",
    "cache:clear": "rm -rf .next && npm run build",
    "perf:analyze": "npm run build:analyze",
    "perf:monitor": "npm run build && npm run start"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-slot": "^1.2.3",
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-react": "^8.6.0",
    "lightningcss": "^1.30.1",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.523.0",
    "motion": "^12.23.11",
    "next": "15.3.4",
    "nodemailer": "^7.0.5",
    "postcss": "^8.5.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-infinite-scroll-component": "^6.1.0",
    "react-markdown": "^10.1.0",
    "react-share": "^5.2.2",
    "remark-gfm": "^4.0.1",
    "swr": "^2.3.4",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.29.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^20.19.9",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.30.0",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "sharp": "^0.34.3",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
